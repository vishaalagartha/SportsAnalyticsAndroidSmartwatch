<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="sportsanalytics.er_lab.com.sportsanalyticsandroidsmartwatch.SorenessFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/list_end_padding"
        android:paddingTop="@dimen/list_start_padding">

        <ListView
            android:id="@+id/musclesListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:nestedScrollingEnabled="true"
            android:scrollbars="vertical"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/submitSorenessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="100dp"
                android:text="Submit"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
            </Button>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
